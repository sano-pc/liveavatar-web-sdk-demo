{
  "$schema": "https://turborepo.com/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [".next/**", "!.next/cache/**"],
      "env": [
        "LIVEAVATAR_API_KEY",
        "LIVEAVATAR_API_URL",
        "LIVEAVATAR_AVATAR_ID",
        "LIVEAVATAR_VOICE_ID",
        "LIVEAVATAR_CONTEXT_ID",
        "LIVEAVATAR_LANGUAGE",
        "ELEVENLABS_API_KEY",
        "OPENAI_API_KEY"
      ]
    },
    "lint": {
      "dependsOn": ["^lint"],
      "env": [
        "LIVEAVATAR_API_KEY",
        "LIVEAVATAR_API_URL",
        "LIVEAVATAR_AVATAR_ID",
        "LIVEAVATAR_VOICE_ID",
        "LIVEAVATAR_CONTEXT_ID",
        "LIVEAVATAR_LANGUAGE",
        "ELEVENLABS_API_KEY",
        "OPENAI_API_KEY"
      ]
    },
    "typecheck": {
      "dependsOn": ["^build", "^typecheck"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "LIVEAVATAR_API_KEY",
        "LIVEAVATAR_API_URL",
        "LIVEAVATAR_AVATAR_ID",
        "LIVEAVATAR_VOICE_ID",
        "LIVEAVATAR_CONTEXT_ID",
        "LIVEAVATAR_LANGUAGE",
        "ELEVENLABS_API_KEY",
        "OPENAI_API_KEY"
      ]
    },
    "test": {
      "dependsOn": ["^test"]
    }
  }
}
